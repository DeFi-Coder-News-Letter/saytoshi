{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "typings/**/*.ts"]
}
